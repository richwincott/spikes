<service>
	<id>spikes.exe</id>
	<name>Spikes</name>
	<description>NodeJs Web Server.</description>
	<executable>C:\Program Files\nodejs\node.exe</executable>
	<logmode>rotate</logmode>
	<argument>--harmony</argument>
	<argument>C:\inetpub\wwwroot\spikes\node_modules\node-windows\lib\wrapper.js</argument>
	<argument>--file</argument>
	<argument>C:\inetpub\wwwroot\Spikes\server.js</argument>
	<argument>--log</argument>
	<argument>Spikes wrapper</argument>
	<argument>--grow</argument>
	<argument>0.25</argument>
	<argument>--wait</argument>
	<argument>1</argument>
	<argument>--maxrestarts</argument>
	<argument>3</argument>
	<argument>--abortonerror</argument>
	<argument>n</argument>
	<argument>--stopparentfirst</argument>
	<argument>undefined</argument>
	<stoptimeout>30sec</stoptimeout>
	<workingdirectory>C:\inetpub\wwwroot\spikes</workingdirectory>
</service>